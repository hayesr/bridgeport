<section id="<%= @user.id %>" class="container">
  <div class="row">
    <div class="eight columns">
      <h2><%= @user.name %></h2>
      <p><strong>Email: </strong> <%= @user.email %></p>
      <p><strong><%= pluralize(@user.roles.count, 'Role' ) %>: </strong> <%= @user.roles.join(', ') %></p>
    </div>
    <div class="four columns">
      <p><%= link_to 'Edit User', edit_admin_user_path(@user) %></p>
      
    </div>
  </div>
</section>